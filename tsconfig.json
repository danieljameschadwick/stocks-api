{
	"version": "2.4.2",
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"es6"
		],
		"types": [
			"reflect-metadata"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}